               .OPTION LIST=SHOW_INCLUDES

***************************************************************************************************
***************************************************************************************************
***                                                                                             ***
***            SEQDEFS - MODEL 440 SEQUENCE/SEQUENCER CONSTANT DEFINITIONS                      ***
***                                                                                             ***
***************************************************************************************************
***************************************************************************************************
;
;
;
;
;VVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVV
;
; BIT-POSITION DEFINITIONS FOR FLAG VARIABLE XPORT_STATE (.B),
; WHICH INDICATES THE OVERALL STATUS OF THE SEQUENCER "TRANSPORT":
;
ERASE_BIT      EQU     0
ERASE_MASK     EQU     00000001B
;
RECORD_BIT     EQU     1
RECORD_MASK    EQU     00000010B
;
REWIND_BIT     EQU     2
REWIND_MASK    EQU     00000100B
;
PLAY_BIT       EQU     3
PLAY_MASK      EQU     00001000B
;
FAST_FWD_BIT   EQU     4
FAST_FWD_MASK  EQU     00010000B
;
STOP_BIT       EQU     5               ;THIS ONE NEVER GETS SET - FOR STOP, ALL BITS = 0.
STOP_MASK      EQU     00100000B
;
PAUSE_BIT      EQU     6
PAUSE_MASK     EQU     01000000B
;
INIT_SYNC_BIT  EQU     7               ;INDICATES INITIAL SYNC FROM TIME CHIP.
INIT_SYNC_MASK EQU     10000000B
;
;AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA
;
;
;
;VVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVV
;
; BIT-POSITION DEFINITIONS FOR TRANSPORT LEDs
; (THEY'RE IN THE M.S.BYTE OF THE LED STATUS WORDS DEFINED IN RAM):
;
PAUSE_LED_BIT  EQU     4
PAUSE_LED_MASK EQU     0001000000000000B
;
ERASE_LED_BIT  EQU     5
ERASE_LED_MASK EQU     0010000000000000B
;
PLAY_LED_BIT   EQU     6
PLAY_LED_MASK  EQU     0100000000000000B
;
RECORD_LED_BIT  EQU    7
RECORD_LED_MASK EQU    1000000000000000B
;
;AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA
;
;
;
;
;
;
;VVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVVV
;
; ERROR CODES FOR SEQUENCER INTERNAL DIAGNOSTICS:
; WE BE USING NUMBERS (INSTEAD OF TEXT STRINGS) TO SAVE ROM SPACE.
; NOTE THAT VALUES MUST BE IN THE RANGE 1-255 (BYTE, UNSIGNED).
;
ILLEGAL_RECORD EQU     1               ;RECORDING(.B) SET WITHOUT RECORD_BIT ENABLE IN XPORT_STATE.
;
ILLEGAL_ERASE  EQU     2               ;ERASING(.B) SET WITHOUT ERASE_BIT ENABLE IN XPORT_STATE.
;
REC_AND_ERASE  EQU     3               ;RECORDING(.B) AND ERASING(.B) SIMULTANEOUSLY SET.
;
SET_FOL_CONS   EQU     4               ;DESTRUCTIVE READ/WRITE SETUP FOLLOWING CONSOLIDATE.
;
SET_FOL_SET    EQU     5               ;DESTRUCTIVE READ/WRITE SETUP FOLLOWING PREVIOUS SETUP.
;
WASTE_OVERFLOW EQU     6               ;ATTEMPTED WRITE INTO WASTELAND WITH BUFFER ALREADY FULL.
;
TURN_FOL_UPD   EQU     7               ;TURNAROUND FOLLOWING UPDATE.
;
TURN_FOL_TURN  EQU     8               ;TURNAROUND FOLLOWING PREVIOUS TURNAROUND.
;
CONS_FOL_UPD   EQU     9               ;CONSOLIDATE FOLLOWING UPDATE.
;
CONS_FOL_CONS  EQU     10              ;CONSOLIDATE FOLLOWING PREVIOUS CONSOLIDATE.
;
CONS_FOL_TURN  EQU     11              ;CONSOLIDATE FOLLOWING TURNAROUND.
;
DRD_CNT_OVRUN  EQU     12              ;BLOCK READ COUNT EXCEEDS 512 AT CONSOLIDATE TIME.
;
WR_CNT_OVRN    EQU     13              ;BLOCK WRITE COUNT EXCEEDS 512 AT CONSOLIDATE TIME.
;
DRD_PTR_LOW    EQU     14              ;READ POINTER BELOW SEQUENCE_RAM START DURING CONSOLIDATE.
;
DRD_PTR_HIGH   EQU     15              ;READ POINTER ABOVE SEQ_RAM_END DURING CONSOLIDATE.
;
WR_PTR_LOW     EQU     16              ;WRITE POINTER BELOW SEQUENCE_RAM START DURING CONSOLIDATE.
;
WR_PTR_HIGH    EQU     17              ;WRITE POINTER ABOVE SEQ_RAM_END DURING CONSOLIDATE.
;
INVALID_LINK   EQU     18              ;LINK BLOCK NUMBER GREATER THAN 399 ENCOUNTERED.
;
LINK_OVRUN     EQU     19              ;LINKS TRACED FOR MORE THAN 400 LINKS WITHOUT HITTING END.
;
UPD_FOL_CONS   EQU     20              ;UPDATE FOLLOWING CONSOLIDATE.
;
UPD_FOL_SET    EQU     21              ;UPDATE FOLLOWING SETUP.
;
NULL_SEQ_EMPTY EQU     22              ;FREE MEM STRING BEGINS WITH END MARKER DURING UPDATE.
;
;AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA
               .OPTION LIST="ON"
