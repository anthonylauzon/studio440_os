               EXTERNAL  AUTO_PUNCH_OUT
               EXTERNAL  WORD_BIN_TO_BCD
               EXTERNAL  WRITE_BCD_DIGITS
               EXTERNAL  DISP_FIELD
               EXTERNAL  TIME_DISPLAY_SUB
;
